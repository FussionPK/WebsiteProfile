:root {
    --orange: #ff6a00; /* primary accent */
    --orange-rgb: 255,106,0; /* for rgba() uses */
    --black: #000000;
    --white: #ffffff;
    --transition: 0.35s;
}

/* Theme variable defaults (dark mode active by default) */
body {
    --bg: var(--black);
    --text: var(--orange);
    --card-bg: rgba(0,0,0,0.85);

.flip-inner { position: relative; width: 100%; height: 320px; transition: transform 0.8s; transform-style: preserve-3d; }
.flip-card:hover .flip-inner { transform: rotateY(180deg); }
.flip-front, .flip-back { position:absolute; width:100%; height:100%; backface-visibility: hidden; border-radius: 14px; overflow: hidden; display:flex; flex-direction:column; justify-content:center; align-items:center; padding:18px; }
.flip-front { background: linear-gradient(180deg,#111 0%, #151515 100%); border: 1px solid rgba(255,106,0,0.08); }
.flip-front img { width:100%; height:160px; object-fit:cover; border-radius:10px; margin-bottom:12px; }
.flip-back { transform: rotateY(180deg); background: rgba(10,10,10,0.95); border: 1px solid rgba(255,106,0,0.12); }
.project-title { color:#ff6a00; font-size:20px; margin-bottom:8px; }
.project-desc { color:#ddd; font-size:15px; text-align:center; }

/* Stats */
.stats-row { display:flex; gap:24px; flex-wrap:wrap; justify-content:center; align-items:center; }
.chart-card { background: rgba(10,10,10,0.9); padding:20px; border-radius:12px; width:420px; box-shadow: 0 10px 30px rgba(0,0,0,0.6); }

/* small utility */
.muted { color:#9a9a9a; }


